# ==================================================
# 영어 발음 분석 파이프라인 환경 설정
# ==================================================
# 이 파일을 .env로 복사하여 실제 값으로 수정하세요
# cp .env.example .env

# ==================================================
# 웹 서버 설정
# ==================================================
HOST=0.0.0.0
PORT=8001
DEBUG=true

# ==================================================
# OpenAI GPT API 설정 (필수)
# ==================================================
# OpenAI API 키 (CEFR 문법 평가용)
# https://platform.openai.com/api-keys 에서 발급
OPENAI_API_KEY=your_openai_api_key_here

# ==================================================
# AWS S3 설정 (필수)
# ==================================================
# AWS 자격 증명 (S3 음성 파일 다운로드용)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=ap-northeast-2

# S3 버킷 이름 (기본값: skala25a)
S3_BUCKET_NAME=skala25a

# ==================================================
# MongoDB 설정 (선택사항)
# ==================================================
# MongoDB 연결 URI
# 로컬: mongodb://localhost:27017
# 클라우드: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb://localhost:27017
# 또는
# MONGODB_URL=mongodb://localhost:27017

# MongoDB 데이터베이스 이름 (기본값: audio)
MONGODB_DATABASE=audio

# ==================================================
# MariaDB/MySQL 설정 (선택사항)
# ==================================================
# 데이터베이스 연결 정보
MARIADB_HOST=localhost
MARIADB_PORT=3306
MARIADB_USER=root
MARIADB_PASSWORD=your_password_here
MARIADB_DATABASE=english_analysis

# ==================================================
# 로깅 설정
# ==================================================
LOG_LEVEL=INFO
LOG_FILE=app.log

# ==================================================
# 파일 경로 설정
# ==================================================
# 임시 오디오 파일 저장 디렉토리
TEMP_AUDIO_DIR=temp_audio

# PLSPP 분석 결과 디렉토리
PLSPP_BASE_DIR=plspp

# ==================================================
# 분석 설정
# ==================================================
# 지원하는 질문 번호 (기본값: 8,9)
SUPPORTED_QUESTION_NUMBERS=8,9

# 분석 타임아웃 (초)
ANALYSIS_TIMEOUT=300

# ==================================================
# 보안 설정 (선택사항)
# ==================================================
# API 키 (API 접근 제한용)
API_KEY=your_api_key_here

# JWT 시크릿 키 (인증용)
JWT_SECRET=your_jwt_secret_here

# ==================================================
# 개발 환경 설정
# ==================================================
# 개발 모드 여부
DEVELOPMENT=true

# 테스트 데이터 사용 여부
USE_TEST_DATA=false 